# CloudHawk Docker Environment Configuration
# Copy this file to .env and customize the values

# GitHub Repository (replace with your actual repository)
GITHUB_REPOSITORY=vatshariyani/cloudhawk

# CloudHawk Configuration
CLOUDHAWK_PORT=5000
CLOUDHAWK_DOMAIN=cloudhawk.local

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1
AWS_CREDENTIALS_PATH=./credentials

# Azure Configuration (optional)
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CREDENTIALS_PATH=./azure-credentials

# GCP Configuration (optional)
GCP_CREDENTIALS_PATH=./gcp-credentials.json

# Database Configuration
POSTGRES_DB=cloudhawk
POSTGRES_USER=cloudhawk
POSTGRES_PASSWORD=cloudhawk_secure_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443
